root = true

[*]
max_line_length = 100
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
indent_size = 4
csharp_new_line_before_open_brace = all
csharp_preserve_single_line_statements = false

[*.md]
trim_trailing_whitespace = false
